<nav class="navbar bg-body-tertiary">
  <div class="container-fluid">
    <h2 class="navbar-brand">Jean Neige, I know something</h2>
    <form class="d-flex" role="create">
      <button class="btn btn-success"><%= link_to "Write article", new_article_path %></button>
    </form>
  </div>
</nav>


<div class="container">
<ul>
  <% @articles.each do |article| %>
  <li class="list-group-item list-group-item-secondary d-flex justify-content-between align-items-start">
      <div class="ms-2 me-auto">
        <div class="fw-bold"><%= link_to article.title, article_path(article) %></div>
        <%= article.content %>
      </div>
    </li>
    <% end %>
</ul>
</div>
